
@model IEnumerable<DevWebReceitas.Application.Dtos.Categoria.CategoriaDto>

<div id="divListaCategorias" >
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>

                        <a href="@Url.Action("Edit", "Categoria", new { codigo = item.Codigo })"
                           title="Editar"
                           class="btn btn-sm btn-warning">
                            <i class="fa fa-edit"></i>
                        </a>|

                        <a href="@Url.Action("Details", "Categoria", new { codigo = item.Codigo })"
                           title="Detalhes"
                           class="btn btn-sm btn-info">
                            <i class="fa fa-eye"></i>
                        </a>|

                        <a href="@Url.Action("Delete", "Categoria", new { codigo = item.Codigo })"
                           title="Excluir"
                           class="btn btn-sm btn-danger">
                            <i class="fa fa-trash-alt"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>