@model IEnumerable<DevWebReceitas.Application.Dtos.Categoria.CategoriaDto>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<form asp-action="Index"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-mode="replace"
      data-ajax-update="#divListaCategorias">
    <div class="row form-group">
        <div class="col-sm-3">
            <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Titulo" />
        </div>
        <div class="col-sm-3">
            <input type="text" name="descricao" id="descricao" class="form-control" placeholder="Descricao" />
        </div>
        <div class="col-sm-1">
            <input type="submit" value="Filtrar" class="btn btn-primary" />
        </div>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-primary">Novo</a>
    </p>

    <partial name="_Categorias" model="Model" />

</form>

