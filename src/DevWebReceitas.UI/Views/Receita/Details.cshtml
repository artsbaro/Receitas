@model DevWebReceitas.Application.Dtos.Receita.ReceitaDto

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Receita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredientes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredientes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModoPreparo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModoPreparo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
            <figure class="figure">
                @if (ViewData.ContainsKey("Imagem") && ViewBag.Imagem != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(@ViewBag.Imagem)" id="image" class="img-thumbnail rounded border border-secondary" width="60%">
                }
            </figure>
        </dd>

    </dl>
</div>
<div>
    <p>
        @Html.ActionLink("", "Like", new { codigo = Model.Codigo, redirectTo = "Details" }, new { @class = "fa fa-thumbs-up" }) @Model.Likes |
        @Html.ActionLink("", "Dislike", new { codigo = Model.Codigo, redirectTo = "Details" }, new { @class = "fa fa-thumbs-down" }) @Model.Dislikes
    </p>
    @Html.ActionLink("Editar", "Edit", new { codigo = Model.Codigo }) |
    <a asp-action="Index">Voltar para lista</a>
</div>
