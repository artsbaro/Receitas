@model DevWebReceitas.Application.Dtos.Receita.ReceitaDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3 class="alert-danger">Confirma a exclusão?</h3>
<div>
    <h4>Receita</h4>
    <hr />
    <form asp-action="Delete">
        <dl class="row">
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Codigo)*@
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.Codigo)*@
                <input type="hidden" asp-for="Codigo" class="form-control" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ingredientes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ingredientes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModoPreparo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModoPreparo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imagem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Imagem)
                <figure class="figure">
                    @if (ViewData.ContainsKey("Imagem") && ViewBag.Imagem != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(@ViewBag.Imagem)" id="image" class="img-thumbnail rounded border border-secondary" width="60%">
                    }
                </figure>
            </dd>
        </dl>

        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
